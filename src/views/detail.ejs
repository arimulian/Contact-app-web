<div class="container">
     <div class="row">
          <div class="col-6 mt-4">
               <% if (!contact) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                         Name is not found. <a href="/contact" class="alert-link fw-normal">&laquo; Back to list
                              contact</a>
                    </div>
                    <% }else{ %>
                         <div class="card text-center">
                              <h5 class="card-header">
                                   Detail Contact
                              </h5>
                              <div class="card-body">
                                   <h5 class="card-title">
                                        <%= contact.nama %>
                                   </h5>
                                   <p class="card-text">
                                        <%= contact.noHP %>
                                   </p>
                                   <p class="card-text text-body-secondary">
                                        <%= contact.email %>
                                   </p>
                                   <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge"
                                        onclick="return confirm('yakin')"><i class="bi bi-trash"></i> Delete</a>
                                   <a href="/contact/update/<%= contact.nama %>" class="btn btn-primary badge"><i
                                             class="bi bi-arrow-repeat"></i> Update</a>
                                   <a href="/contact" class="card-link d-block mt-3"><i
                                             class="bi bi-arrow-left-square"></i>
                                        Back to List
                                        Contact </a>
                              </div>
                         </div>
                         <% } %>
          </div>
     </div>
</div>